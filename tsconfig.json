{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es5",
            "es6"
        ],
        "types": [
            "reflect-metadata",
            "node",
            "mocha"
        ],
        "target": "es5",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "watch": false,
        "downlevelIteration": true,
        "strict": false
    },
    "exclude": [
        "node_modules"
    ]
}